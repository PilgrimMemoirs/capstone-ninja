<p id="notice"><%= notice %></p>

<h1>Capstones</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @capstones.each do |capstone| %>
      <tr>
        <td><%= capstone.name %></td>
        <td><%= link_to 'Show', capstone %></td>
        <td><%= link_to 'Edit', edit_capstone_path(capstone) %></td>
        <td><%= link_to 'Destroy', capstone, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Capstone', new_capstone_path %>
